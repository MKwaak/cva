FROM node:13-alpine

WORKDIR /home/app/server

ENV NODE_ENV production

ENV API_MAILCHIMP $API_MAILCHIMP
ENV GOOGLE_ACCOUNT $GOOGLE_ACCOUNT
ENV GOOGLE_PASSWORD $GOOGLE_PASSWORD
ENV EMAIL_TO_1 $EMAIL_TO_1
ENV EMAIL_TO_2 $EMAIL_TO_2
ENV EMAIL_TO_3 $EMAIL_TO_3
ENV EMAIL_TO_4 $EMAIL_TO_4

# COPY env.json

# COPY package*.json .

# COPY script.sh

RUN yarn install

COPY . /home/app/server

EXPOSE 5000

CMD ["./script.sh"]
